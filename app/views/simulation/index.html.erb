<script>
	$( document ).ready(function() {
		$("#create").click(function() {
			var workflow = { "workflowid" : "id" };
			var mockdata = { "stage1" : "value1", "stage2" : "value2" };
			
			var data = {};
			data[0] = workflow;
			data[1] = mockdata;
			
			alert(data[1].stage1);
			
			$.ajax({
				url: "simulation/create", 
				type: "POST",
				data: data,
				success: function() {
					alert("Success");
				},
				error: function() {
					alert("Error");
				}
			});
		});
		
		$("#delete").click(function() {
			
			workflowid = { "id" : 1 }
			
			alert(workflowid.id);
			
			$.ajax({
				url: "simulation/destroy", 
				type: "DELETE",
				data: workflowid,
				success: function() {
					alert("Success");
				},
				error: function() {
					alert("Error");
				}
			});
		});
	});
</script>


<h1>Simulation</h1>

<button id="create">Create Mock Data</button>
<button id="delete">Delete Mock Data</button>

<table>
  <tr>
    <th>Workflow ID</th>
    <th>Mock Data</th>
  </tr>
 
<% @mockdata.each do |data| %>
  <tr>
    <td><%= data.workflowid %></td>
    <td><%= data.data %></td>
  </tr>
<% end %>
</table>