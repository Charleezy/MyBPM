<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Mybpm" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Mybpm" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= yield :javascript %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/shared/navigation' %>
    <div id="page-wrapper" class="container">
      <%= render 'layouts/shared/messages' %>
      <%= render 'layouts/shared/subnav' %>
      <%= yield %>
    </div>
  </body>
</html>
