<% if position == 'left' %>

  <li class="<%= @current_uri == root_path ? 'active' : ''%>">
    <%= link_to 'Home', root_path %>
  </li>
  <li class="<%= @current_uri == workflows_path ? 'active' : ''%>">
    <%= link_to 'Workflow', workflows_path %>
  </li>
  <li class="<%= @current_uri == simulations_path ? 'active' : ''%>">
    <%= link_to 'Simulation', simulations_path %>
  </li>
<% else %>

  <% if user_signed_in? %>
    <li class="<%= @current_uri == new_user_registration_path ? 'active' : ''%>">
      <%= link_to 'Edit profile', edit_user_registration_path %>
    </li>
    <li class="<%= @current_uri == new_user_registration_path ? 'active' : ''%>">
      <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
    </li>
  <% else %>
    <li class="<%= @current_uri == new_user_registration_path ? 'active' : ''%>">
      <%= link_to 'Sign up', new_user_registration_path %>
    </li>
    <li class="<%= @current_uri == new_user_registration_path ? 'active' : ''%>">
      <%= link_to 'Login', new_user_session_path %>
    </li>
  <% end %>

<% end %>